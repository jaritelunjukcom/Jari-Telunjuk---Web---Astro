<script>
  const menu = document.getElementsByClassName("menu");
  const header = document.getElementsByClassName("header");
  const content = document.getElementsByClassName("content");
  const iconArrow = document.getElementsByClassName("arrow-down_icon");

  for (let i = 0; i < header.length; i++) {
    header[i].addEventListener("click", () => {
      if (content[i].classList.contains("hidden")) {
        content[i].classList.remove("hidden");
        content[i].classList.add("block");
      } else {
        content[i].classList.remove("block");
        content[i].classList.add("hidden");
      }

      if (iconArrow[i].classList.contains("rotate-0")) {
        iconArrow[i].classList.remove("rotate-0");
        iconArrow[i].classList.add("rotate-180");
      } else {
        iconArrow[i].classList.remove("rotate-180");
        iconArrow[i].classList.add("rotate-0");
      }
    });
  }
</script>

