---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Search Result">
  <main class="relative overflow-hidden pb-10 pt-20 xl:pb-20 xl:pt-32">
    <div class="container mx-auto max-w-screen-xl px-4 xl:px-12">
      <div
        class="relative grid grid-cols-1 gap-10 xl:grid-cols-12 xl:pb-14 xl:pt-10"
      >
        <section class="col-span-1 xl:col-span-8">
          <h3
            class="mb-6 font-arvo text-2xl leading-7 text-[#2E2E2E] xl:mb-10 xl:text-[34px] xl:leading-none"
          >
            <span class="text-[#868686]">Result for</span> Atomic Habits
          </h3>

          <div class="space-y-4 xl:space-y-10">
            {
              [1, 2, 3, 4, 5, 6].map((item) => {
                return (
                  <figure class="group relative flex w-full flex-wrap items-start gap-3 xl:flex-nowrap xl:gap-8">
                    <a class="absolute z-10 h-full w-full" href="/detail" />

                    <img
                      class="aspect-video h-auto w-full rounded-md xl:h-48 xl:w-auto"
                      src="/blog-1.png"
                      alt="Blog 1 Photo"
                    />

                    <div class="space-y-2 text-left">
                      <h5 class="text-base font-bold leading-5 group-hover:underline xl:text-2xl xl:leading-[28px]">
                        Sell Yourself to Success In Career and Life
                      </h5>

                      <p class="line-clamp-2 pb-1.5 text-sm text-[#515151] xl:text-base">
                        In her second novel, The Stationery Shop, Marjan Kamali
                        weaves a heartbreaking tale. No matter your occupation,
                        you’re going...
                      </p>

                      <p class="relative z-20 space-x-2 text-sm xl:text-base">
                        <span>Category</span>
                        <a
                          href="/category"
                          class="text-[#128C55] hover:underline"
                        >
                          Self Improvement
                        </a>
                      </p>

                      <p class="text-sm xl:text-base">
                        Reza Adil - 25 Januari 2021
                      </p>
                    </div>
                  </figure>
                );
              })
            }
          </div>
        </section>

        <section class="col-span-1 xl:col-span-4">
          <h3
            class="mb-6 font-arvo text-2xl leading-7 xl:mb-10 xl:text-[34px] xl:leading-none"
          >
            Popular
          </h3>

          <div class="space-y-4 xl:space-y-6">
            {
              [1, 2, 3, 4, 5].map((item) => {
                return (
                  <figure class="group relative flex w-full items-start gap-3 xl:gap-4">
                    <a class="absolute z-10 h-full w-full" href="/" />

                    <h3 class="font-arvo text-2xl font-bold italic leading-[26px] opacity-20">
                      0{item}
                    </h3>

                    <div class="flex-1 space-y-2">
                      <h5 class="text-lg font-semibold leading-5 group-hover:underline xl:text-xl">
                        Sell Yourself to Success In Career and Life
                      </h5>

                      <p class="line-clamp-2 pb-1.5 text-sm text-[#515151] xl:text-base">
                        In her second novel, The Stationery Shop, Marjan Kamali
                        weaves a heartbreaking tale. No matter your occupation,
                        you’re going...
                      </p>

                      <p class="relative z-20 space-x-2 text-sm xl:text-base">
                        <span>Category</span>
                        <a
                          href="/category"
                          class="text-[#128C55] hover:underline"
                        >
                          Self Improvement
                        </a>
                      </p>

                      <p class="text-sm xl:text-base">
                        Reza Adil - 25 Januari 2021
                      </p>
                    </div>
                  </figure>
                );
              })
            }
          </div>
        </section>
      </div>
    </div>
  </main>
</Layout>
